<ContentControl x:Class="SwitchAnimation_WPF.Controls.UserSwitch"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Name="UserSwitchXaml"
                Height="60" Width="120">
    <Grid>
        <Border BorderBrush="LightGray"
                BorderThickness="1"
                Background="WhiteSmoke"
                Margin="10"
                CornerRadius="20"
                x:Name="BordElem"
                >
            <Ellipse     Width="40"
                         Height="40"
                         x:Name="ElipElem"
                         Margin="0,0,55,0"                         
                         >
                <Ellipse.Effect>
                    <DropShadowEffect     BlurRadius="15"
                                          Color="Gray"
                                          Direction="200"
                                          Opacity="0.7"/>
                </Ellipse.Effect>
            </Ellipse>
        </Border>
    </Grid>
</ContentControl>
