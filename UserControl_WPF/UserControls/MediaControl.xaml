<UserControl x:Class="UserControl_WPF.UserControls.MediaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControl_WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <MediaElement Name="ME" Height="400" Width="600" LoadedBehavior="Manual" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" MediaEnded="ME_MediaEnded"/>
        <Button Width="100" Height="42" VerticalAlignment="Center" Click="ButtonBase_OnClick">Open File</Button>
    </StackPanel>
</UserControl>
