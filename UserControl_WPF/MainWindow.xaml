<Window x:Class="UserControl_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControl_WPF"
        xmlns:my="clr-namespace:UserControl_WPF.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">    
    <Grid>
        <StackPanel>
            <MediaElement Name="ME" Height="400" Width="600" LoadedBehavior="Manual" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" MediaEnded="ME_MediaEnded"/>
            <Button Width="100" Height="42" VerticalAlignment="Center" Click="ButtonBase_OnClick">Open File</Button>
        </StackPanel>
    </Grid>
</Window>
