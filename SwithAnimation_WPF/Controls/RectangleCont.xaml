<UserControl x:Class="SwithAnimation_WPF.Controls.RectangleCont"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwithAnimation_WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="White">
            <Rectangle Fill="LightBlue" Width="200" Height="100" Margin="10" />
            <Rectangle Fill="LightPink" Width="200" Height="100" RadiusX="80" RadiusY="50" Margin="10" />
        </StackPanel>
    </Grid>
</UserControl>
