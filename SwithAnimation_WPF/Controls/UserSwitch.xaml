<ContentControl  x:Class="SwithAnimation_WPF.Controls.UserSwitch"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 Name="UserSwitchControl"
                 Height="{Binding ElementName=UserSwitchControl, Path=UserHeigth}"
                 Width="{Binding ElementName=UserSwitchControl, Path=UserWidth}">
    <Grid>
        <Border Grid.Column="2" 
                Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="WhiteSmoke"
                Margin="10"
                CornerRadius="20"
                x:Name="ExtElem">
            <Ellipse Width="40" 
                     Height="40" 
                     Fill="White" 
                     Margin="0,0,55,0"
                     x:Name="InnElem">
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Color="Gray"
                                      Direction="260"
                                      Opacity="0.2"/>
                </Ellipse.Effect>
            </Ellipse>
        </Border>
    </Grid>
</ContentControl>
