<ContentControl x:Class="SwithAnimation_WPF.Controls.UserSwitch1"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:SwithAnimation_WPF"
                mc:Ignorable="d"
                x:Name="UserSwitch1Control">
    <Grid Margin="10" Width="{Binding ElementName=UserSwitch1Control, Path=UserWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
          Height="{Binding ElementName=UserSwitch1Control, Path=UserHeigth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Background="White">
        <Rectangle x:Name="rect" RadiusX="35" RadiusY="35" Fill="Gray" Stroke="Black"/>
        <Ellipse x:Name="ellipse" Stroke="Yellow" Fill="White" Height="{Binding ElementName=UserSwitch1Control, Path=UserHeigth}" Width="{Binding  ElementName=UserSwitch1Control, Path=UserHeigth}"/>
    </Grid>
</ContentControl>
